<%- include("partials/header"); -%>


<div class="container mt-5">
  <h1>New Patient Registration</h1>

  <div class="row">
    <div class="col-sm-8">
      <div class="card">
        <div class="card-body">

          <form action="/UserPost" method="post">
            <div class="form-group">
              <label for="name">Name</label>
              <input type="text" class="form-control" id="name" placeholder='"John Smith"' name="name" required>
            </div>
            <div class="form-group">
              <label for="emailaddr">Email</label>
              <input type="email" class="form-control" id="emailaddr" aria-describedby="emailHelp" placeholder='"johnsmith@gmail.com"' name="email" required>
            </div>
            <div class="form-group">
              <label for="pass">Password</label>
              <input type="password" class="form-control" id="pass" name="pass" required>
            </div>
            <p>Already have an account? <a href="/login">Login</a></p>
            <button type="submit" class="btn btn-primary">Submit</button>
          </form>

        </div>
      </div>
    </div>

  </div>
</div>


<%- include("partials/footer"); -%>
